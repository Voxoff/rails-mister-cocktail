<head>
  <%= javascript_pack_tag 'application' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body>
  <div class="image">
    <div class="wrap">
      <h1>Alice Drinks</h1>

      <div class="wrapper">
        <%= image_tag("alice.png") %>
      </div>
    </div>
    <div class="motto">
      <h2>Down The Rabbit Hole</h2>
    </div>
    <div class="tick">
      <h3>Tick tock</h3>
    </div>
    <div class="rabbit">
      <!-- rabbit this up -->
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each_with_index do |cocktail, i| %>
        <div class="col-xs-6 col-md-4">
          <div class="queen">
              <%= image_tag("queen.png", class: "nonsense")%>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.img_url %>)">
              <!-- <h3 id="card_img<%= i + 1 %>"><%= cocktail.name %></h3> -->
              <h3 class="invert"><%= cocktail.name %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
