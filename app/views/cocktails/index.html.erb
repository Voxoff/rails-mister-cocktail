<head>
  <%= javascript_pack_tag 'application' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body>
  <div class="image">
    <div class="wrap">
      <h1>Alice Drinks</h1>

      <div class="wrapper">
        <%= image_tag("alice.png") %>
      </div>
    </div>
    <div class="motto">
      <h2>Down The Rabbit Hole</h2>
    </div>
    <div class="tick">
      <h3>Tick tock</h3>
    </div>
    <div class="rabbit">
      <!-- rabbit this up -->
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-6 col-md-4 col-lg-3">
          <div class="card" style="background-image: url(<%= cocktail.img_url %>)">
            <h3><%= cocktail.name %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
